<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="160dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="1dp"
    android:padding="10dp"

    app:cardElevation="10dp"
    android:id="@+id/card_booking_info">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:id="@+id/linear_booking_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/my_bookings_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:fontFamily="@font/biryani_extralight"
                    android:textSize="14sp"
                    android:textColor="@color/battleship_grey"
                    android:text=" 14/04/23"
                    android:layout_gravity="center_horizontal"
                    />


            </LinearLayout>

            <View
                android:layout_below="@+id/linear_booking_date"
                android:id="@+id/dateroom_divider"
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@color/battleship_grey"/>

            <LinearLayout
                android:id="@+id/linear_room"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linear_booking_date"
                android:orientation="horizontal"

                >

                <TextView
                    android:id="@+id/my_bookings_roomNum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="28sp"
                    android:textAlignment="center"
                    android:layout_gravity="center_horizontal"
                    android:text="1.03"
                    android:textColor="@color/blue_cerulean"
                    />
            </LinearLayout>

            <View
                android:layout_below="@+id/linear_room"
                android:id="@+id/roomtime_divider"
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@color/battleship_grey"/>

            <LinearLayout
                android:id="@+id/linear_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linear_room"
                android:orientation="vertical"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                >

                <TextView
                    android:id="@+id/my_bookings_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"
                    android:textSize="14sp"
                    android:textColor="@color/battleship_grey"
                    android:text=" 10:00 - 11:00"
                    />
            </LinearLayout>

            <View
                android:layout_below="@+id/linear_time"
                android:id="@+id/timepupose_divider"
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@color/battleship_grey"/>

            <LinearLayout
                android:id="@+id/linear_purpose"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linear_time"
                android:orientation="vertical"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="5dp"

                >

                <TextView
                    android:id="@+id/my_bookings_purpose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"
                    android:textSize="14sp"
                    android:text="Purpose"
                    android:textColor="@color/blue_cerulean"
                    />
            </LinearLayout>


        </RelativeLayout>


</androidx.cardview.widget.CardView>